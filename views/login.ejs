<body style="background-color: #25DCE8;">
    <div class="main-content">
      <div class="header py-7 py-lg-8" >
        <div class="container">
          <div class="header-body text-center mb-7">
            <div class="row justify-content-center">
              <div class="col-lg-5 col-md-6">
                <h1 class="text-white">Welcome!</h1>
              </div>
            </div>
          </div>
        </div>
    </div>
      <div class="container mt--8 pb-5" >
        <div class="row justify-content-center">
          <div class="col-lg-5 col-md-7">
            <div class="card bg-secondary shadow">
              <div class="card-body px-lg-5 py-lg-5" style="-webkit-box-shadow: 4px 3px 8px 1px #9696968a;">
                <form role="form" action="/login" method="POST">
                  <div class="form-group mb-3">
                    <div class="input-group input-group-alternative">
                      <div class="input-group-prepend">
                        <span class="input-group-text"><i class="ni ni-email-83 custome-icon"></i></span>
                      </div>
                      <input class="form-control" placeholder="Email" type="email" name="username">
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="input-group input-group-alternative">
                      <div class="input-group-prepend">
                        <span class="input-group-text"><i class="ni ni-lock-circle-open custome-icon"></i></span>
                      </div>
                      <input class="form-control" placeholder="Password" type="password" name="password">
                    </div>
                  </div>
                  <div class="text-center">
                    <button class="btn btn-primary my-4" id="signin-btn" style="background-color: #25DCE8;">Sign in</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div> 
    <%- include('scripts'); -%> 
  </body>
    