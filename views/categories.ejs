<body>
    <style>
      .partialheader {
        display: none;
      }
    </style>
    <!-- Sidenav -->
    <%- include('partials/sidebar'); -%>
    <div class="main-content">
  <div class="header pb-6" style="background-color:#25DCE8;">
      <div class="container-fluid">
        <div class="header-body">
          <div class="row align-items-center py-4">
            <div class="col-lg-6 col-7">
              <h6 class="h2 text-white d-inline-block mb-0"><%= title %></h6>
            </div>
            <div class="col-lg-6 col-5 text-right">
              <a href="/admin/addCatView" class="btn btn-sm btn-neutral">Add New Category</a>
              <a href="/admin/report/category" class="btn btn-sm btn-neutral">Generate Categories Report</a>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- Page content -->
    <div class="container-fluid mt--6">
      <div class="row">
        <div class="col">
          <div class="card">
            <!-- Card header -->
            <div class="card-header border-0">
              <h3 class="mb-0">Category List</h3>
            
            </div>
            <!-- Light table -->
            <div class="table-responsive">
              <table class="table align-items-center table-flush">
                <thead class="thead-light">
                  <tr>
                    <th scope="col" class="sort" data-sort="name">Name</th>
                    <th scope="col" class="sort" data-sort="name">Image</th>
                    <!-- <th scope="col" class="sort" data-sort="completion">Create At</th> -->
                    <th scope="col"></th>
                  </tr>
                </thead>
                <tbody class="list"> 
                  <% for(var i=0; i < categories.length; i++) { %>                
                  <tr>
                    <th scope="row">
                      <div class="media align-items-center">
                        <div class="media-body">
                          <span class="name mb-0 text-sm"><%= categories[i].name %></span>
                        </div>
                      </div>
                    </th>
                    <td>
                      <span class="badge badge-dot mr-4" style="width: 250px;height: 150px">
                        <img alt="Image placeholder" src="../uploads/<%= categories[i].image%>" style="height: 100%;width: 100%;">
                      </span>
                    </td>
                    <!-- <td>
                      <span class="status"><%= categories[i].creatAt %></span>
                    </td> -->
                    <td class="text-right">
                      <div class="dropdown">
                        <a class="btn btn-sm btn-icon-only text-light" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                          <i class="fa fa-cog fa_custom fa-2x" style="size: 20px;color:#25DCE8;"></i>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right dropdown-menu-arrow">
                          <!-- <a class="dropdown-item" href="/admin/categoryView/<%= categories[i].cat_id %>">View Category</a> -->
                          <a class="dropdown-item" href="/admin/category/delete/<%= categories[i].cat_id %>" onclick="return confirm('Are you sure to delete?')">Delete</a>
                        </div>
                      </div>
                    </td>
                  </tr>
                  <% } %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%- include('scripts'); -%>
  </body>