<body>
    <style>
      .partialheader {
        display: none;
      }
    </style>
    <!-- Sidenav -->
    <%- include('partials/sidebar'); -%>
    <div class="main-content">
    <div class="header pb-6" style="background-color: #25DCE8;"></div>
    <div class="container-fluid mt--5">
    <!-- Form -->
        <div class="row">
            <div class="col">
                <div class="card shadow">
                    <div class="card-header border-0">
                        <h3 class="mb-0">View User's Details</h3>
                    </div>
                    <form enctype="multipart/form-data">
                        <div class="row pl-5">
                            <div class="col-lg-5">
                                <div class="form-group">
                                    <span class="status" style="margin-bottom: 18px;">Name</span>
                                    <div class="input-group input-group-alternative">
                                        <span class="form-control"><%= user.name %></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-5">
                                <div class="form-group">
                                    <span class="status" style="margin-bottom: 18px;">Email Address</span>
                                    <div class="input-group input-group-alternative">
                                        <span class="form-control"><%= user.email %></span>
                                    </div>
                                </div>
                            </div>
                        </div>                      
                        <div class="row pl-5">
                            <div class="col-lg-5">
                                <div class="form-group">
                                    <span class="status" style="margin-bottom: 18px;">Contact No</span>
                                    <div class="input-group input-group-alternative">
                                        <span class="form-control"><%= user.contact_no %></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-5">
                                <div class="form-group">
                                    <span class="status" style="margin-bottom: 18px;">Position</span>
                                    <div class="input-group input-group-alternative">
                                        <span class="form-control"><%= user.position %></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row pl-5">
                            <div class="col-lg-10">
                                <div class="form-group">
                                    <span class="status" style="margin-bottom: 18px;">Address</span>
                                    <div class="input-group input-group-alternative">
                                        <span class="form-control"><%= user.address %></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row pl-5">
                            <div class="col-lg-10">
                                <div class="form-group">
                                    <span class="status" style="margin-bottom: 18px;">Description</span>
                                    <div class="input-group input-group-alternative" style="height: 100px;">
                                        <span class="form-control"><%= user.description %></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row pl-5">
                            <div class="row pl-5 pb-2">
                                <div class="col-lg-12">
                                    <button class="btn btn-primary" style="background-color: #25DCE8;"><a href="/admin/user/block/<%= user.uid %>/<%= user.active %>" style="color: white;"><%if(user.active==="yes"){ %>Block<% } else {%>Unblock<% }%></a></button>
                                </div>
                            </div>
                        </div>
                        <div class="row pl-7 pb-5">
                            <% if (err) { %>
                                <strong class="invalid-feedback" style="display: block">
                                    <%= msg %>
                                </strong>
                            <% } else{%>
                                <strong class="valid-feedback" style="display: block">
                                    <%= msg %>
                                </strong>
                             <% }%>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
<%- include('scripts'); -%>
</body>